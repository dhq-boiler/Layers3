<UserControl
    x:Class="Layers3.Views.ShowRecommendedPolicy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Layers3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <DockPanel>
        <Label DockPanel.Dock="Top">以下のJSONをポリシーエディタに貼り付けて適用することを検討してください。</Label>
        <TextBox
            Margin="10"
            FontFamily="Consolas"
            FontSize="22"
            IsReadOnly="True"
            Text="{Binding Json.Value}" />
    </DockPanel>
</UserControl>
